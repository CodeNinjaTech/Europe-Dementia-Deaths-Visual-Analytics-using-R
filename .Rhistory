aes(x = year, y = name, fill = d_vs_100k, colour = d_vs_100k, group = name) +
geom_tile() +
scale_fill_distiller(palette = "BuPu", direction = 1) +
scale_color_distiller(palette = "BuPu", direction = 1) +
